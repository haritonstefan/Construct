{% extends '::base.html.twig' %}

{% block body -%}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="col-sm-1 pull-right margin_small">
            <a href="{{ path('service_new') }}">
                <div class="btn btn-default"> New Service </div>
            </a>
        </div>
    {% endif %}

    <div class="container">
        <hr>
        {% for service in services %}
            <div class="col-md-3 img-portfolio">
                <a href="{{ path('service_show', {'id': service.id}) }}">
                    <p> {{ service.name }} </p>
                    <img class="img-responsive img-hover" src="{{ service.name }}" alt="">
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
