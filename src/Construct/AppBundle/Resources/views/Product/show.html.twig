{% extends '::base.html.twig' %}

{% block body -%}
<div class="row">

    <div class="col-md-8">
        <img style="max-height: 600px; margin: 10px; " class="img-responsive" src="{{ asset(product.webpath) }}">
    </div>

    <div class="col-md-4">
        <h3> {{ product.name }} </h3>
        <p> {{ product.description }}</p>
        <h3> {{ product.price  }} MDL</h3>
    </div>

    {% if is_granted('ROLE_ADMIN') %}
        <div class="col-sm-1 pull-right margin_small">
            <a href="{{ path('product_edit', {'id': product.id}) }}">
                <div class="btn btn-default"> Edit</div>
            </a>
            <a href="{{ path('product_delete', {'id': product.id}) }}">
                {{ form_start(delete_form) }}
                {{ form_widget(delete_form.submit, {'attr': {'class': 'btn btn-default'}}) }}
                {{ form_end(delete_form) }}
            </a>
        </div>
    {% endif %}

</div>
